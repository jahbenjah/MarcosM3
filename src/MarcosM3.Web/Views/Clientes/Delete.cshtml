        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequiereFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequiereFactura)
